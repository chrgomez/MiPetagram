<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro1perfil"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLikesPerfil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="180dp"
                android:layout_toStartOf="@+id/ivLikesPerfil"
                android:text="@string/plikes"
                android:textAlignment="center"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/ivLikesPerfil"
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="156dp"
                android:layout_x="205dp"
                android:layout_y="0dp"
                android:src="@drawable/ic_likes" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>